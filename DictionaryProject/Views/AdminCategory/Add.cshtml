@model Entities.Concrete.Category

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("Add", "AdminCategory", FormMethod.Post))
{

<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.CategoryName)
    <br /><br />
    @Html.Label("Açıklamayı Yazınız")
    @Html.TextBoxFor(c => c.CategoryDescription, new { @class = "form-control" })
    @Html.ValidationMessageFor(c => c.CategoryDescription)
    <br />
    <button class="btn btn-info" id="btn1">Kaydet</button>
    <script>
    $('#btn1').click(function () {
        swal("Tebrikler!", "Başarılı bir şekilde kaydedildi!", "success");
    });
    </script>
</div>

}



